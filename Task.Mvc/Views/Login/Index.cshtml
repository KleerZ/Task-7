@model PlayerViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="modal modal-signin d-block py-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-3">Please, enter your name</h1>
            </div>

            <div class="modal-body p-5 pt-0">
                <form asp-action="Index" asp-controller="Login" method="post">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" type="text" maxlength="50" class="form-control rounded-3" id="floatingInput" placeholder="Username">
                        <label for="floatingInput">Username</label>
                        <span class="valid-error" asp-validation-for="Name"></span>
                    </div>
                    <input class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" value="Go" type="submit">
                </form>
            </div>
        </div>
    </div>
</div>