@using System.Security.Claims
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row">
        <div class="col fw-bold text-center fs-1 mt-2">
            Hello, @User.FindFirst(ClaimTypes.NameIdentifier)?.Value!
        </div>
    </div>
    <div class="row">

        <div class="col-md mb-3">
            <div class="row text-center mb-3 d-flex justify-content-center">
                <div class="row text-center">
                    <span class="mb-2 fs-5 fw-bolder">Create lobby</span>
                </div>
                <div class="row d-flex justify-content-center">
                    <button class="btn btn-success w-75">Create</button>
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <div class="row mb-2 text-center">
                    <span class="fs-5 fw-bolder">Connect to lobby</span>
                </div>
                <div class="row mb-2 d-flex justify-content-center">
                    <input id="connect-id-input" class="form-control w-75" type="text">
                </div>
                <div class="row d-flex justify-content-center">
                    <button disabled id="connect-btn" class="btn btn-primary w-75">Connect</button>
                </div>
            </div>
        </div>

        <div class="col-md">
            <div class="row fs-5 fw-bolder text-center mb-2">
               <span>Free games</span>
            </div>
            <div class="row d-flex justify-content-center free-games-container">
                
                @for (int i = 0; i < 100; i++)
                {
                    <row class="free-game mb-2">
                        <div class="row fw-bolder">Сreator: llk</div>
                        <div class="row fw-bolder">Connection id: 24324343435</div>
                    </row>
                }
                
            </div>
        </div>
    </div>
</div>